# Server Configuration
PORT=8000
NODE_ENV=development

# Database Configuration
# Option 1: Use DATABASE_URL (recommended)
DATABASE_URL=mysql://root:password@localhost:3306/voting_system

# Option 2: Use individual variables
# DB_USER=root
# DB_PASSWORD=password
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=voting_system

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Blockchain Configuration
BLOCKCHAIN_RPC_URL=http://localhost:8545

# System Wallet (used by Owner/Creator for contract operations)
# Generate with: cd smartcontract && npm run generate-account
ADMIN_WALLET_PRIVATE_KEY=your_system_wallet_private_key_here
ADMIN_WALLET_ADDRESS=your_system_wallet_address_here

# IPFS Configuration
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/

# Pinata Configuration (optional - for IPFS pinning)
PINATA_ENABLED=false
PINATA_JWT=
PINATA_API_KEY=
PINATA_API_SECRET=
PINATA_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/

# SMTP Configuration (optional - for email notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=